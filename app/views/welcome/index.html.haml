%section.welcome-banner-section
  %header.welcome-banner-header
    .container
      %ul.inline
        %li
          %ul.inline
            %li.count
              268 123
            %li
              %div
                impressions/day from 12K+ unique IPs
              .text-success
                %i.icon-arrow-rise
                15.17%
        %li
          %ul.inline
            %li.count
              15 673
            %li
              %div
                clicks/day from 1.1K unique IPs
              .text-success
                %i.icon-arrow-rise
                5.7%

        %li
