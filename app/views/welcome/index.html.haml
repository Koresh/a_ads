          #add-place.tab-pane.active
            %form.form-horizontal
              %fieldset
                .control-group
                  %label.control-label{for: "inputTitle"}
                    Title
                  .controls
                    %input#inputTitle.span4{type: "text", placeholder: "Type your title here"}
                .control-group
                  %label.control-label{for: "inputText"}
                    Text
                  .controls
                    %input#inputText.span4{type: "text", placeholder: "Example ad text here. Ad text here."}
                .control-group
                  %label.control-label{for: "inputLink"}
                    Link
                  .controls
                    %input#inputLink.span4{type: "text", placeholder: "http://yoursite.com"}
                .control-group
                  .controls
                    %button.btn.btn-primary{type:"submit"} Create Ad

          #profile.tab-pane
            %form.form-horizontal
              %fieldset
                .control-group
                  %label.control-label{for: "selectType"}
                    Type
                  .controls
                    %select#selectType.span4
                      %option Site
                      %option Another
                .control-group
                  %label.control-label{for: "inputLink"}
                    Link
                  .controls
                    %input#inputLink.span4{type: "text", placeholder: "Example ad text here. Ad text here."}
                .control-group
                  .controls
                    %button.btn.btn-primary{type:"submit"} Create Ad

