            %li.count
              0.23
            %li
              %div
                B/day from 3 campaigns
              .text-error
                %i.icon-arrow-fall
                4.2%
  .container
    .row-fluid
      .span5
        %ul#welcome-banner-tabs.nav.nav-tabs
          %li.active
            %a{href: "#add-place"} Place your ad
          %li
            %a{href: "#profile"} Earn money
         
        .tab-content
          #add-place.tab-pane.active
            %form.form-horizontal
              %fieldset
                .control-group
                  %label.control-label{for: "inputTitle"}
                    Title
                  .controls
                    %input#inputTitle.span11{type: "text", placeholder: "Type your title here"}
                .control-group
                  %label.control-label{for: "inputText"}
                    Text
                  .controls
                    %input#inputText.span11{type: "text", placeholder: "Example ad text here. Ad text here."}
                .control-group
                  %label.control-label{for: "inputLink"}
                    Link
                  .controls
                    %input#inputLink.span11{type: "text", placeholder: "http://yoursite.com"}
                .control-group
                  .controls
                    %button.btn.btn-primary{type:"submit"} Create Ad

          #profile.tab-pane
            %form.form-horizontal
              %fieldset
                .control-group
                  %label.control-label{for: "selectType"}
                    Type
                  .controls
                    %select#selectType.span11
                      %option Site
                      %option Another
                .control-group
                  %label.control-label{for: "inputLink"}
                    Link
                  .controls
                    %input#inputLink.span11{type: "text", placeholder: "Example ad text here. Ad text here."}
                .control-group
                  .controls
                    %button.btn.btn-primary{type:"submit"} Create Ad

      .span7
        #myCarousel.carousel.slide
          %ol.carousel-indicators
            %li.active{data: {target: "#myCarousel", slide: {to: "0"}}}
            %li{data: {target: "#myCarousel", slide: {to: "1"}}}
            %li{data: {target: "#myCarousel", slide: {to: "2"}}}
            %li{data: {target: "#myCarousel", slide: {to: "3"}}}
